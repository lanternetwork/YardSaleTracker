{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "dist/",
    "build/",
    "coverage/",
    "supabase/functions/",
    "app/actions/**",
    "app-property-pulse/**",
    "context-property-pulse/**",
    "public/sw.js",
    "**/*.ts",
    "**/*.tsx"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_.*|^(reset)$", "ignoreRestSiblings": true }]
  },
  "settings": { "react": { "version": "detect" } }
}


