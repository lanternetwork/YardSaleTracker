# =============================================================================
# YARD SALE TRACKER - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your values
# Required variables are marked with [REQUIRED]

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# [REQUIRED] Supabase project URL (public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# [REQUIRED] Supabase anonymous key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# [REQUIRED] Supabase service role key (server-only, for admin operations)
SUPABASE_SERVICE_ROLE=your-service-role-key-here
# Alternative name (both supported)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# [REQUIRED] Your app's public URL (used for auth redirects, PWA, etc.)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# [OPTIONAL] Override for brand name (default: LootAura)
NEXT_PUBLIC_APP_NAME=LootAura

# =============================================================================
# GOOGLE MAPS
# =============================================================================
# [OPTIONAL] Google Maps API key for location features
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key

# =============================================================================
# PWA & PUSH NOTIFICATIONS
# =============================================================================
# [OPTIONAL] VAPID keys for push notifications (server-only)
VAPID_PRIVATE_KEY=your-vapid-private-key

# [OPTIONAL] VAPID public key (exposed to client)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# [OPTIONAL] Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# RATE LIMITING & CACHING
# =============================================================================
# [OPTIONAL] Upstash Redis for rate limiting and caching
UPSTASH_REDIS_REST_URL=https://your-redis-url
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =============================================================================
# INGESTION & ADMIN
# =============================================================================
# [OPTIONAL] Token for Craigslist ingestion (server-only)
CRAIGSLIST_INGEST_TOKEN=your-ingest-token

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# [OPTIONAL] Enable demo data when no sales exist (default: false)
NEXT_PUBLIC_ENABLE_DEMO=false

# [OPTIONAL] Show diagnostics in preview builds (default: false)
NEXT_PUBLIC_ENABLE_DIAGNOSTICS=false

# [OPTIONAL] Enable admin features (default: true)
ENABLE_ADMIN=true

# [OPTIONAL] Enable browser extension features (default: true)
ENABLE_EXTENSION=true

# [OPTIONAL] Enable email ingestion (default: false)
ENABLE_EMAIL_INGEST=false

# [OPTIONAL] Enable gateway features (default: false)
ENABLE_GATEWAY=false

# =============================================================================
# GEOLOCATION & TESTING
# =============================================================================
# [OPTIONAL] Manual location override for testing (format: "lat,lng,city")
# Example: MANUAL_LOCATION_OVERRIDE=38.2527,-85.7585,Louisville
MANUAL_LOCATION_OVERRIDE=

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
# - Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# - Server-only variables are kept secure and not sent to client
# - Feature flags allow enabling/disabling features without code changes
# - All variables have sensible defaults except the REQUIRED ones
# - In production, missing optional variables will log warnings but not crash